
import java.util.Scanner;
class pattrn3{
public static void main(String args[]){
Scanner input=new Scanner(System.in);
System.out.println("Enter int number");
int n=input.nextInt();
for(int i=n;i>=1;i--){
for(int j=1;j<=n-i;j++){
System.out.print("  ");
}
for(int j=1;j<=i;j++){
System.out.print(i +" ");
}
System.out.println(" ");
}

}
}
